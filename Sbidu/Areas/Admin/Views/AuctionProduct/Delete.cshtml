@model AuctionProduct
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section>
    <container>
        <row>
            <div class="px-4">
                <h1 class="text-danger">Delete</h1>
                <h3 class="text-danger">Are you sure you want to delete this?</h3>
                <div>
                    <h4>Home Intro</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.AuctionProductGalleries.FirstOrDefault().Photo)
                        </dt>
                        <dd class="col-sm-10">
                            @foreach (var item in Model.AuctionProductGalleries)
                            {
                                <img src="~/uploads/@item.Photo" width="200" class="mb-1" alt="Alternate Text" />
                            }
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.About)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.About)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Category)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Category.Name)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Popular)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Popular)
                        </dd>
                        <dt class="col-sm-2">
                            Buy Now Price
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.BuyNowPrice)$
                        </dd>
                        <dt class="col-sm-2">
                            Start Price
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.StartPrice)$
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-primary">Back to List</a>
                    </form>
                </div>
            </div>
        </row>
    </container>
</section>

